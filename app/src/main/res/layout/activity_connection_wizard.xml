<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/dark_blue"

    tools:context="com.example.ethanmorris.smartcarseatapp.ConnectionWizard">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/pairText"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="26sp"
        android:text="@string/pairDevice"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/connectionInstructions"
        android:text="@string/connectInstructions"
        android:textSize="14sp"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_below="@+id/pairText"
         />

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:progressTint="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/connectionInstructions"
        android:indeterminate="true"/>


    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bluetoothList"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/progressBar"
        android:background="@color/white"
        android:layout_alignParentStart="true"
        />


</RelativeLayout>
